# https://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 4

[*.{html,php}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.{css,less,scss}]
indent_style = space
indent_size = 2
